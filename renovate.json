{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:js-lib",
        "schedule:daily"
    ],
    "addLabels": [
        "renovate"
    ],
    "semanticCommitScope": "",
    "semanticCommitType": "build",
    "timezone": "Europe/Berlin",
    "packageRules": [
        {
            "groupName": "All dev dependencies",
            "groupSlug": "all-dev-minor-patch",
            "matchDepTypes": [
                "devDependencies"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "prConcurrentLimit": 1
        }
    ]
}